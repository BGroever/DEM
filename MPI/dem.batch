#!/bin/bash
#SBATCH -J exec.openmp
#SBATCH -o exec.openmp.out
#SBATCH -e exec.openmp.err
#SBATCH -p general
#SBATCH -n 4
#SBATCH -c 4
#SBATCH -t 1-00:00
#SBATCH --mem-per-cpu=4000
#SBATCH --account=ingber_lab

module purge
module load gcc/7.1.0-fasrc01 openmpi/3.1.3-fasrc01
make

export OMP_NUM_THREADS=4
srun -n 4 --cpus-per-task=4 --mpi=pmi2 ./exec.openmp
