#!/bin/bash
#SBATCH -J hybrid_test
#SBATCH -o hybrid_test.out
#SBATCH -e hybrid_test.err
#SBATCH -p general
#SBATCH -n 2
#SBATCH -c 4
#SBATCH -t 180
#SBATCH --mem-per-cpu=4000
#SBATCH --account=ingber_lab

module purge
module load gcc/7.1.0-fasrc01 openmpi/3.1.1-fasrc01

export OMP_NUM_THREADS=4
srun -n 2 --cpus-per-task=4 --mpi=pmi2 ./hybrid_test.x
